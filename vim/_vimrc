"au BufReadPost svn-commit*.tmp call Artifacts()
function! Artifacts()
   let artfs = readfile("c:/bin/artifacts.txt", "", 10)
   let artf = inputlist(artfs)
   if artf > 0
      let vals = split(artfs[artf], '\t')
      let str = vals[1] . " Scott - "
      let rc = append(0, str)
      normal gg
      normal A
   endif
endf

