fun! GrepIt(Needle, ...)
   if bufname("%") == t:NERDTreeBufName
      wincmd l
   endif
   let l:haystack = a:0 > 0 ? a:1 : '*.{js,mustache}'
   execute "silent! grep --exclude=*.swp --exclude-dir=dist --exclude-dir=lib --exclude=production.js --include=" . l:haystack . " " . a:Needle
   copen
endfun
command! -nargs=+ Grep call GrepIt(<f-args>)
nnoremap gr :Grep <cword><CR>

